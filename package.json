{
  "name": "vue3-base",
  "version": "0.1.0",
  "description": "vue3+ts基础管理平台",
  "keywords": [
    "vue3",
    "ts",
    "typescript",
    "tdesign",
    "tdesign-vue-next"
  ],
  "license": "MIT",
  "author": "948533798@qq.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/wc19950724/vue3-base.git"
  },
  "bugs": {
    "url": "https://github.com/wc19950724/vue3-base/issues"
  },
  "main": "src/main.ts",
  "scripts": {
    "start": "vite",
    "build": "pnpm lint && vite build",
    "lint": "pnpm prettier && vue-tsc && pnpm eslint",
    "prettier": "prettier --ignore-path .eslintignore **/*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts} --write",
    "eslint": "eslint **/*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts} --fix",
    "release": "release-cli"
  },
  "dependencies": {
    "@vueuse/core": "^10.0.2",
    "dayjs": "^1.11.7",
    "js-cookie": "^3.0.1",
    "lodash": "^4.17.21",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.35",
    "pinia-plugin-persistedstate": "^3.0.1",
    "tdesign-icons-vue-next": "^0.1.8",
    "tdesign-vue-next": "^1.3.1",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6",
    "vue3-json-viewer": "^2.2.2"
  },
  "devDependencies": {
    "@types/js-cookie": "^3.0.3",
    "@types/node": "^18.15.13",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.11.0",
    "ghooks": "^2.0.4",
    "less": "^4.1.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "release-base-cli": "^0.0.1",
    "typescript": "^5.0.4",
    "unplugin-auto-import": "^0.15.3",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.3.1",
    "vite-plugin-html": "^3.2.0",
    "vite-svg-loader": "^4.0.0",
    "vue-tsc": "^1.4.1"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": [
      "pnpm lint"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npx lint-staged --quiet --concurrent false"
    }
  }
}
